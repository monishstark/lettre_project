<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/dp_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/cdp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/user__2_" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/cname3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/dp_circle"
        android:fontFamily="sans-serif"
        android:paddingLeft="20dp"
        android:text="TEXT VIEW"
        android:textColor="#E8DDDD"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@+id/dp_circle"
        app:layout_constraintTop_toTopOf="@+id/dp_circle" />

    <View
        android:id="@+id/dummy_view3"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/dp_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dp_circle">

    </View>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/dummy_view3"
        android:background="#28282B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dummy_view3">

    </View>
</RelativeLayout>